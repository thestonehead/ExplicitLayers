<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageVersion>1.0.0.1</PackageVersion>
    <PreserveCompilationContext>true</PreserveCompilationContext>

    <Authors>TheStonehead</Authors>
    <PackageProjectUrl>https://github.com/thestonehead/ExplicitLayers</PackageProjectUrl>
    <RepositoryUrl>https://github.com/thestonehead/ExplicitLayers</RepositoryUrl>
    <Description>ExplicitLayers is a package that enables you to introduce explicit checks on inter-layer dependencies.</Description>
    <PackageReleaseNotes>Initial version.</PackageReleaseNotes>
    <Copyright>Copyright</Copyright>
    <PackageTags>ExplicitLayers, analyzers</PackageTags>

    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);_AddAnalyzersToOutput</TargetsForTfmSpecificContentInPackage>
    <PackageIcon>ExplicitLayers.png</PackageIcon>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\ExplicitLayers.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>


  <ItemGroup>
    <None Update="tools\*.ps1" CopyToOutputDirectory="PreserveNewest" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ExplicitLayers.Analyzers\ExplicitLayers.Analyzers.csproj" />
  </ItemGroup>

  <Target Name="_AddAnalyzersToOutput">
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(OutputPath)\ExplicitLayers.Analyzers.dll" PackagePath="analyzers/dotnet/cs" />
    </ItemGroup>
  </Target>

</Project>
